{

    "manifest_version": 2,
    "name": "Varmonize",
    "version": "1.0",
  
    "description": "Watch videos wit frens",
  
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
  
    "browser_specific_settings": {
        "gecko": {
          "id": "varmonize@example.com"
        }
    },

    "browser_action": {
        "default_icon": "icons/icon-96.png",
        "default_title": "Varmonize",
        "default_popup": "popup/popup.html"
    },

    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content_scripts/varmonize.js"]
      }
    ]
  
  }